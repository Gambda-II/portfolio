---
import { Image } from "astro:assets";

interface Props {
	source: ImageMetadata;
	alt: string;
	title: string;
	body: string;
	gradientStartColor: string;
	gradientEndColor: string;
}

const { source, alt, title, body , gradientStartColor, gradientEndColor } = Astro.props;
---

<div class="card">
	<Image src={source} alt={alt} id={"card-image"} />
	<div class="swipe-up">
		<h3>{title}</h3>
		<div class="text-box">
			<p>{body}</p>
		</div>
		<svg viewBox="0 0 599 200" xmlns="http://www.w3.org/2000/svg">
			<defs>
				<linearGradient id="gradient" x1="0%" x2="0%" y1="15%" y2="100%">
					<stop offset="0%" stop-color="#2040d0"></stop>
					<stop offset="100%" stop-color="#f00100"></stop>
				</linearGradient>
			</defs>
			<path
				d="
			M 0 600
			L 0 240
			L 450 150
			C 450 150 600 100 600 240
			L 600 600
			L 0 600
			"
			></path>
		</svg>
	</div>
</div>

<style>
	.card {
		position: relative;
		box-shadow: 4px 0px 5px black;
		min-width: 300px;
		max-width: 300px;
		height: auto;
		overflow-y: hidden;
		font-size: 0.9em;
	}
	.swipe-up {
		position: absolute;
		transition: top 0.5s ease;
		top: 40px;
		left: 0;
		width: 100%;
		height: 100%;
	}

	.text-box {
		position: absolute;
		top: 250px;
		padding-left: 5px;
	}
	h3 {
		position: absolute;
		display: inline;
		top: 14px;
		padding: 0.2rem 0.6rem;
		background-color: rgba(0, 0, 0, 0.5);
	}
	svg {
		stroke-width: 0.5rem;
		fill: url(#gradient);
		position: absolute;
		top: 30px;
		left: 0;
		height: 100%;
		width: 100%;
		margin-top: 0.3rem;
		border-radius: 2rem;
		transition: top 0.5s ease;
		filter: drop-shadow(0 0 2px #8a0000);
		z-index: -1;
	}
	#card-image {
		position: relative;
		width: 100%;
		height: 100%;
		z-index: -2;
	}

	.card:hover .swipe-up {
		transition: 1s;
		top: -35px;
	}

	.card,
	svg,
	#card-image {
		border-radius: 2rem;
	}
</style>
