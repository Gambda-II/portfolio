---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Progress from "../components/Progress.astro";
import Card from "../components/Card.astro";
import cardImage1 from "../assets/chefRat.jpg";
import cardImage2 from "../assets/raven.jpg";
import cardImage3 from "../assets/polarbear.jpg";
import Factbox from "../components/Factbox.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section id = "hero">
			<Hero />
		</section>
		<section id = "skills">
			<div class="skill-grid">
				<Progress
					language={"TypeScript"}
					color={"blue"}
					progressValue={20}
				/>
				<Progress
					language={"C#"}
					color={"rgb(100, 0, 200)"}
					progressValue={1}
				/>
				<Progress
					language={"SQL"}
					color={"orange"}
					progressValue={60}
				/>
				<Progress
					language={"HTML/CSS"}
					color={"rgb(151, 0, 30)"}
					progressValue={99}
				/>
			</div>
		</section>
		<section id = "projects">
			<div class="card-container">
				<Card
					source={cardImage1}
					alt="Projekt 1"
					title="Projekt 1"
					body="Beschreibung eines Projekts."
					gradientStartColor="#b32837b0"
					gradientEndColor="#79d3c9"
				/>

				<Card
					source={cardImage2}
					alt="Projekt 2"
					title="Projekt 2"
					body="Beschreibung eines anderen Projekts."
					gradientStartColor="#ffb02e"
					gradientEndColor="#402a32"
				/>

				<Card
					source={cardImage3}
					alt="Projekt 3"
					title="Projekt 3"
					body="Beschreibung des neusten Projekts."
				/>
			</div>
		</section>
		<section id = "cat-facts">
			<Factbox />
		</section>
	</main>
</Layout>

<style>
	section {
		margin-bottom: 2rem;
	}
	main {
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.skill-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		margin-bottom: 2rem;
	}
	.card-container {
		display: flex;
		flex-direction: row;
		gap: 1rem;
		flex-wrap: nowrap;
	}
</style>
